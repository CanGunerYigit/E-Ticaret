@model E_Ticaret.Models.Cart
@{
    ViewBag.Title = "Index";

}
<style>
  td,tr{
      color:gray;
  }
</style>
<div class="container pb-5 mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Alışveriş Sepeti</h2>
            <hr />
            @if (Model.CartLines.Count > 0)
            {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Miktar</th>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Total</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model.CartLines)
                   {
                        <tr>
                            <td>
                                <img src="/Upload/@item.Product.Image" width="50">
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.Product.Name
                            </td>
                            <td>
                                @item.Product.Price   
                            </td>
                            <td> @*fiyatı para birimi şeklinde yazdır*@
                                @(item.Product.Price * item.Quantity)
                            </td>
                            <td>
                                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                {
                                    @Html.Hidden("Id", item.Product.Id)
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    Sil
                                </button>
                                }
                            </td>
                        </tr>
                   }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5"></td>
                        <td>
                            @Model.Total().ToString("c")
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div class="text-center">
                <a href="/Home/List" class="btn btn-primary">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                    Alışverişe Devam Et
                </a>
                <a href="/Cart/Checkout" class="btn btn-primary">
                    Alışverişi Tamamla
                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                </a>
            </div>
            } @*sepette ürün varsa bu görüntüyü ver*@
            else
            {
                <div class="alert alert-warning" role="alert">
                    Alışveriş Sepetinde Ürün Yoktur
                </div>
            }
        </div>
    </div>
</div>